<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Content" %>
    <%= f.button :submit, class: 'button small expand' %>
    <%= link_to 'Back', tasks_path, class: 'button small expand secondary' %>
<% end %>
